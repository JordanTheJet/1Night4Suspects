<?xml version="1.0" encoding="UTF-8"?>
<svg width="960" height="1080" xmlns="http://www.w3.org/2000/svg">
  <!-- Transparent background -->
  <rect width="960" height="1080" fill="rgba(0,0,0,0)"/>

  <!-- Character silhouette -->
  <defs>
    <linearGradient id="char-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#c41e3a;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#751222;stop-opacity:0.9" />
    </linearGradient>
  </defs>

  <!-- Body (simplified humanoid shape) -->
  <ellipse cx="480.0" cy="250" rx="120" ry="160" fill="url(#char-gradient)" opacity="0.8"/>
  <rect x="400.0" y="380" width="160" height="500" rx="40" fill="url(#char-gradient)" opacity="0.8"/>

  <!-- Border for definition -->
  <ellipse cx="480.0" cy="250" rx="120" ry="160" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="3"/>
  <rect x="400.0" y="380" width="160" height="500" rx="40" fill="none" stroke="rgba(255,255,255,0.3)" stroke-width="3"/>

  <!-- Name label -->
  <text x="480.0" y="950"
        font-family="Arial, sans-serif"
        font-size="48"
        font-weight="bold"
        fill="#c41e3a"
        text-anchor="middle">HARPER</text>

  <!-- Emotion label -->
  <text x="480.0" y="1000"
        font-family="Arial, sans-serif"
        font-size="32"
        fill="rgba(255,255,255,0.6)"
        text-anchor="middle">(Defensive)</text>

  <!-- Watermark -->
  <text x="940" y="1060"
        font-family="Arial, sans-serif"
        font-size="16"
        fill="rgba(255,255,255,0.3)"
        text-anchor="end">PLACEHOLDER</text>
</svg>